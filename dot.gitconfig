; vim: expandtab ts=4 sw=4 sts=4 ff=unix ft=gitconfig
[user]
    name = oppara
    email = oppara@oppara.tv

[core]
    excludesfile = ~/.gitignore
    editor = ~/bin/vim
    autoCRLF = false
    pager = $PAGER

[color]
    ui = auto

[pager]
    log =  $PAGER
    show = $PAGER
    diff = $PAGER

[alias]
    st = status
    co = checkout
    ci = commit -v
    ca = commit --amend
    cn = commit --amend --no-edit
    ll = log --graph -50 --decorate --color --date=short --pretty=format:'%C(red)%x09%h %C(yellow)%cn %C(blue)%ci  %C(reset)%s%C(green)%d%Creset'
    me = merge --no-ff
    au = add -u
    fe = fetch
    rs = remote -v show
    df = diff -b
    dc = diff -b --cached
    dn = diff -b master --name-only
    cp = cherry-pick
    ; merge, rebase をもとに戻す
    ab = reset --hard ORIG_HEAD
    empty = commit -q --allow-empty -m 'initial commit'
    ; リモートで消されたブランチを消す
    pr = fetch --prune

    ; http://davidwalsh.name/get-git-commit-id
    id = rev-parse HEAD

    ;http://d.hatena.ne.jp/thinca/20130925/1380099336
    ignore = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    ignored = !git ls-files -v | grep "^[a-z]"

[rerere]
    enabled = true

[push]
    default = simple
